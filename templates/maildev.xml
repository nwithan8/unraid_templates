<?xml version="1.0"?>
<Container version="2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/template_schema.xsd template_schema.xsd">
    <Name>MailDev</Name>
    <Repository>maildev/maildev:latest</Repository>
    <Registry>https://hub.docker.com/r/maildev/maildev</Registry>
    <Branch>
        <Tag>latest</Tag>
        <TagDescription>Latest stable release</TagDescription>
    </Branch>
    <Network>bridge</Network>
    <WebUI>http://[IP]:[PORT:1080]/</WebUI>
    <Privileged>false</Privileged>
    <Support>https://github.com/maildev/maildev/issues</Support>
    <Project>https://maildev.github.io/maildev/</Project>
    <Overview>
        SMTP Server + Web Interface for viewing and testing emails during development.
    </Overview>
    <Beta>False</Beta>
    <Category>Productivity: Tools: Other: Status:Stable</Category>
    <ExtraSearchTerms>email smtp web interface testing development</ExtraSearchTerms>
    <Icon>https://raw.githubusercontent.com/nwithan8/unraid_templates/master/images/maildev-icon.png</Icon>
    <TemplateURL>https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/maildev.xml</TemplateURL>
    <Maintainer>
        <WebPage>https://github.com/nwithan8</WebPage>
    </Maintainer>
    <Changes>
        ### 2025-07-30

        Initial release
    </Changes>
    <PostArgs>bin/maildev --base-pathname /maildev -w 1080 -s 1025</PostArgs>
    <Config Name="Web UI Port" Target="1080" Default="1080" Mode="tcp" Description="Container Port: 1080" Type="Port" Display="always-hide" Required="true" Mask="false">1080</Config>
    <Config Name="SMTP Port" Target="1025" Default="1025" Mode="tcp" Description="Container Port: 1025" Type="Port" Display="always-hide" Required="true" Mask="false">1025</Config>
</Container>
