<?xml version="1.0"?>
<Container version="2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/template_schema.xsd template_schema.xsd">
    <Name>GiftManager</Name>
    <Repository>icbest/giftmanager:latest</Repository>
    <Registry>https://hub.docker.com/r/icbest/giftmanager</Registry>
    <Branch>
        <Tag>latest</Tag>
        <TagDescription>Latest stable release</TagDescription>
    </Branch>
    <Network>bridge</Network>
    <WebUI>http://[IP]:[PORT:5000]/</WebUI>
    <Privileged>false</Privileged>
    <Support>https://gift.icbest.ca/</Support>
    <Project>https://giftmanagerdemo.pages.dev/</Project>
    <Overview>
        Gift ideas manager for families
    </Overview>
    <Beta>False</Beta>
    <Category>Productivity: Tools: Other: Status:Stable</Category>
    <ExtraSearchTerms>gifts presents ideas manager family wishlist Christmas holiday party planner</ExtraSearchTerms>
    <Icon>https://raw.githubusercontent.com/nwithan8/unraid_templates/master/images/gift-manager-icon.png</Icon>
    <TemplateURL>https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/gift_manager.xml</TemplateURL>
    <Maintainer>
        <WebPage>https://github.com/nwithan8</WebPage>
    </Maintainer>
    <Changes>
        ### 2025-10-26

        Initial release
    </Changes>
    <Requires>
        Optionally provide the Docker Socket to enable settings reload within the container.
    </Requires>
    <Config Name="Web UI Port" Target="5000" Default="5000" Mode="tcp" Description="Container Port: 5000" Type="Port" Display="always-hide" Required="true" Mask="false">5000</Config>
    <Config Name="Docker Socket" Target="/var/run/docker.sock" Default="/var/run/docker.sock" Mode="ro" Description="Optional, path to the Docker socket. Provide to enable settings reload inside application." Type="Path" Display="always" Required="true" Mask="false">/var/run/docker.sock</Config>
    <Config Name="App Data" Target="/app/data" Default="/mnt/user/appdata/gift_manager/data" Description="Path to the data folder" Type="Path" Display="advanced-hide" Required="true" Mask="false">/mnt/user/appdata/gift_manager/data</Config>
</Container>
