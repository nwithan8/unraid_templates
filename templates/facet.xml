<?xml version="1.0"?>
<Container version="2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/template_schema.xsd template_schema.xsd">
    <Name>Facet</Name>
    <Repository>ghcr.io/jesposito/facet:latest</Repository>
    <Registry>ghcr.io/jesposito/facet</Registry>
    <Branch>
        <Tag>latest</Tag>
        <TagDescription>Latest stable release</TagDescription>
    </Branch>
    <Network>bridge</Network>
    <WebUI>http://[IP]:[PORT:8080]/</WebUI>
    <Privileged>false</Privileged>
    <Support>https://github.com/jesposito/Facet/issues</Support>
    <Project>https://github.com/jesposito/Facet</Project>
    <Overview>
        Facet is a self-hosted personal profile platform that lets you create multiple views of your professional profile for different audiences (recruiters, conferences, clients). &#xD;
        &#xD;
        You own your data and control what each audience sees. &#xD;
        &#xD;
        Default password: changeme123 (you will be prompted to change it on first login)
    </Overview>
    <Beta>False</Beta>
    <Category>Productivity: Tools: Other: Status:Stable</Category>
    <ExtraSearchTerms>personal profile portfolio resume cv recruiter conference client self-hosted</ExtraSearchTerms>
    <Icon>https://raw.githubusercontent.com/jesposito/Facet/main/assets/icon.png</Icon>
    <TemplateURL>https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/facet.xml</TemplateURL>
    <Maintainer>
        <WebPage>https://github.com/nwithan8</WebPage>
    </Maintainer>
    <Changes>
        ### 2026-01-21

        - Fix Display settings (storage paths now visible by default, OAuth/AI under advanced)
        - Remove internal variables that break container (PORT, DATA_PATH, UPLOADS_PATH)
        - Remove ADMIN_ENABLED toggle

        ### 2026-01-20

        Initial release
    </Changes>
    <Config Name="Web UI Port" Target="8080" Default="8080" Mode="tcp" Description="The port used to access Facet in your browser." Type="Port" Display="always" Required="true" Mask="false">8080</Config>
    <Config Name="App Data" Target="/data" Default="/mnt/user/appdata/facet" Mode="rw" Description="Database and configuration storage. Include this in your backups." Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/facet</Config>
    <Config Name="Uploads" Target="/uploads" Default="/mnt/user/appdata/facet/uploads" Mode="rw" Description="Storage for uploaded images and files." Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/facet/uploads</Config>
    <Config Name="Admin Email" Target="ADMIN_EMAILS" Default="" Description="Email address for admin login." Type="Variable" Display="always" Required="true" Mask="false"/>
    <Config Name="Public URL" Target="APP_URL" Default="" Description="Your Facet URL (e.g. https://facet.yourdomain.com). Required for OAuth and share links." Type="Variable" Display="always" Required="false" Mask="false"/>
    <Config Name="Trust Proxy" Target="TRUST_PROXY" Default="true" Description="Enable if behind a reverse proxy (NPM, Traefik, Cloudflare)." Type="Variable" Display="always" Required="false" Mask="false">true</Config>
    <Config Name="PUID" Target="PUID" Default="99" Description="User ID for file permissions." Type="Variable" Display="advanced" Required="false" Mask="false">99</Config>
    <Config Name="PGID" Target="PGID" Default="100" Description="Group ID for file permissions." Type="Variable" Display="advanced" Required="false" Mask="false">100</Config>
    <Config Name="Google Client ID" Target="GOOGLE_CLIENT_ID" Default="" Description="For 'Sign in with Google'. Redirect URI: YOUR_URL/api/oauth2-redirect" Type="Variable" Display="advanced" Required="false" Mask="false"/>
    <Config Name="Google Client Secret" Target="GOOGLE_CLIENT_SECRET" Default="" Description="From Google Cloud Console." Type="Variable" Display="advanced" Required="false" Mask="true"/>
    <Config Name="GitHub Client ID" Target="GITHUB_CLIENT_ID" Default="" Description="For 'Sign in with GitHub'. Redirect URI: YOUR_URL/api/oauth2-redirect" Type="Variable" Display="advanced" Required="false" Mask="false"/>
    <Config Name="GitHub Client Secret" Target="GITHUB_CLIENT_SECRET" Default="" Description="From GitHub OAuth App settings." Type="Variable" Display="advanced" Required="false" Mask="true"/>
    <Config Name="OpenAI API Key" Target="OPENAI_API_KEY" Default="" Description="For AI features (optional)." Type="Variable" Display="advanced" Required="false" Mask="true"/>
    <Config Name="Anthropic API Key" Target="ANTHROPIC_API_KEY" Default="" Description="Alternative to OpenAI (optional)." Type="Variable" Display="advanced" Required="false" Mask="true"/>
    <Config Name="Ollama URL" Target="OLLAMA_BASE_URL" Default="" Description="Local Ollama instance URL (e.g. http://192.168.1.100:11434)." Type="Variable" Display="advanced" Required="false" Mask="false"/>
    <Config Name="Ollama Model" Target="OLLAMA_MODEL" Default="llama3.2" Description="Ollama model name." Type="Variable" Display="advanced" Required="false" Mask="false">llama3.2</Config>
</Container>
