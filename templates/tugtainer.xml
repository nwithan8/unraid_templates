<?xml version="1.0"?>
<Container version="2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/template_schema.xsd template_schema.xsd">
    <Name>Tugtainer</Name>
    <Repository>quenary/tugtainer:latest</Repository>
    <Registry>https://hub.docker.com/r/quenary/tugtainer</Registry>
    <Branch>
        <Tag>latest</Tag>
        <TagDescription>Latest stable release</TagDescription>
    </Branch>
    <Network>bridge</Network>
    <WebUI>http://[IP]:[PORT:80]/</WebUI>
    <Privileged>false</Privileged>
    <Support>https://github.com/Quenary/tugtainer/issues</Support>
    <Project>https://github.com/Quenary/tugtainer</Project>
    <Overview>
        Automate updates of your Docker containers
    </Overview>
    <Beta>False</Beta>
    <Category>Productivity: Tools: Other: Status:Stable</Category>
    <ExtraSearchTerms>automation docker update monitor watchtower gui ui</ExtraSearchTerms>
    <Icon>https://raw.githubusercontent.com/nwithan8/unraid_templates/master/images/tugtainer-icon.png</Icon>
    <TemplateURL>https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/tugtainer.xml</TemplateURL>
    <Screenshot>https://raw.githubusercontent.com/Quenary/tugtainer/refs/heads/main/resources/tugtainer-containers-v1.1.2.png</Screenshot>
    <Screenshot>https://raw.githubusercontent.com/Quenary/tugtainer/refs/heads/main/resources/tugtainer-images-v1.1.2.png</Screenshot>
    <Screenshot>https://raw.githubusercontent.com/Quenary/tugtainer/refs/heads/main/resources/tugtainer-settings-v1.1.2.png</Screenshot>
    <Maintainer>
        <WebPage>https://github.com/nwithan8</WebPage>
    </Maintainer>
    <Changes>
        ### 2025-10-07

        Initial release
    </Changes>
    <Config Name="Web UI Port" Target="80" Default="9412" Mode="tcp" Description="Container Port: 80" Type="Port" Display="always-hide" Required="true" Mask="false">9412</Config>
    <Config Name="App Data" Target="/tugtainer" Default="/mnt/user/appdata/tugtainer" Description="Path to the data folder" Type="Path" Display="advanced-hide" Required="true" Mask="false">/mnt/user/appdata/tugtainer</Config>
    <Config Name="Docker Socket" Target="/var/run/docker.sock" Default="/var/run/docker.sock" Mode="ro" Description="Path to the Docker socket" Type="Path" Display="advanced-hide" Required="true" Mask="false">/var/run/docker.sock</Config>
</Container>
