<?xml version="1.0"?>
<Container version="2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/template_schema.xsd template_schema.xsd">
    <Name>Decluttarr</Name>
    <Repository>ghcr.io/manimatter/decluttarr:latest</Repository>
    <Registry>ghcr.io/manimatter/decluttarr</Registry>
    <Branch>
        <Tag>latest</Tag>
        <TagDescription>Latest stable release</TagDescription>
    </Branch>
    <Branch>
        <Tag>v2.0.0</Tag>
        <TagDescription>Specific version 2.0.0</TagDescription>
    </Branch>
    <Branch>
        <Tag>dev</Tag>
        <TagDescription>Latest dev release</TagDescription>
    </Branch>
    <Network>bridge</Network>
    <Privileged>false</Privileged>
    <Support>https://github.com/ManiMatter/decluttarr/issues</Support>
    <Project>https://github.com/ManiMatter/decluttarr</Project>
    <Overview>
        A helper tool that works with the *arr-application suite, and automates the clean-up for their download queues, keeping them free of stalled / redundant downloads. It supports Radarr, Sonarr, Readarr, Lidarr, and Whisparr.
    </Overview>
    <Beta>False</Beta>
    <Category>Downloaders: MediaServer:Video Productivity: Tools: Other: Status:Stable</Category>
    <ExtraSearchTerms>declutter decluttarr radarr sonarr readarr lidarr whisparr downloader automation cleanup</ExtraSearchTerms>
    <Icon>https://raw.githubusercontent.com/nwithan8/unraid_templates/master/images/decluttarr-icon.png</Icon>
    <TemplateURL>https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/decluttarr.xml</TemplateURL>
    <Maintainer>
        <WebPage>https://github.com/nwithan8</WebPage>
    </Maintainer>
    <Changes>
        ### 2025-11-02

        Initial release
    </Changes>
    <Requires>
        Requires a `config.yaml` file to be mounted at the Config File path before starting the container. See configuration details: https://github.com/ManiMatter/decluttarr#config-file
    </Requires>
    <Config Name="Config File" Target="/app/config/config.yaml" Default="/mnt/user/appdata/decluttarr/config.yaml" Description="Path to the config file" Type="Path" Display="always-hide" Required="true" Mask="false">/mnt/user/appdata/decluttarr/config.yaml</Config>
    <Config Name="PUID" Target="PUID" Default="099" Description="" Type="Variable" Display="advanced" Required="true" Mask="false">099</Config>
    <Config Name="PGID" Target="PGID" Default="100" Description="" Type="Variable" Display="advanced" Required="true" Mask="false">100</Config>
</Container>
