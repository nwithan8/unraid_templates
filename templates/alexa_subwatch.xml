<?xml version="1.0"?>
<Container version="2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/template_schema.xsd template_schema.xsd">
    <Name>Alexa Subwatch</Name>
    <Repository>simplysublime/alexa-subwatch:latest</Repository>
    <Registry>https://hub.docker.com/r/simplysublime/alexa-subwatch</Registry>
    <Branch>
        <Tag>latest</Tag>
        <TagDescription>Latest stable release</TagDescription>
    </Branch>
    <Network>bridge</Network>
    <Privileged>false</Privileged>
    <Support>https://github.com/senpaiSubby/alexa-subwatch/issues</Support>
    <Project>https://github.com/senpaiSubby/alexa-subwatch</Project>
    <Overview>
        Ask Alexa to add movie and shows to Radarr and Sonarr.
    </Overview>
    <Beta>False</Beta>
    <Category>MediaApp:Video MediaServer:Video Productivity: Tools: Other: Status:Stable</Category>
    <ExtraSearchTerms>sonarr radarr plex emby jellyfin alexa voice assistant google home</ExtraSearchTerms>
    <Icon>https://raw.githubusercontent.com/nwithan8/unraid_templates/master/images/alexa-subwatch-icon.png</Icon>
    <TemplateURL>https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/alexa_subwatch.xml</TemplateURL>
    <Maintainer>
        <WebPage>https://github.com/nwithan8</WebPage>
    </Maintainer>
    <Changes>
        ### 2025-03-30

        Initial release
    </Changes>
    <Requires>
        Expects a `config.yaml` file in the Config Path. See documentation: https://github.com/senpaiSubby/alexa-subwatch?tab=readme-ov-file#subwatch-configuration
    </Requires>
    <Config Name="API Port" Target="5000" Default="5000" Mode="tcp" Description="Container Port: 5000" Type="Port" Display="always-hide" Required="true" Mask="false">5000</Config>
    <Config Name="Config Path" Target="/config" Default="/mnt/user/appdata/alexa_subwatch/config" Description="Path to config files" Type="Path" Display="always-hide" Required="true" Mask="false">/mnt/user/appdata/alexa_subwatch/config</Config>
</Container>
