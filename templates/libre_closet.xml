    <Config Name="Web UI Port" Target="3000" Default="3000" Mode="tcp" Description="Container Port: 3000" Type="Port" Display="always-hide" Required="true" Mask="false">3000</Config>
    <Config Name="App Name" Target="APP_NAME" Default="Libre Closet" Description="Name of the application" Type="Variable" Display="always-hide" Required="true" Mask="false">Libre Closet</Config>
    <Config Name="Auth Enabled" Target="AUTH_ENABLED" Default="false|true" Description="Enable or disable authentication." Type="Variable" Display="always-hide" Required="true" Mask="false"/>
    <Config Name="PWA Enabled" Target="PWA_ENABLED" Default="false|true" Description="Enable or disable PWA service worker." Type="Variable" Display="always-hide" Required="true" Mask="false"/>
    <Config Name="Auth Access Token" Target="ACCESS_TOKEN_SECRET" Default="" Description="Secret key for signing access tokens. Generate a secure random key with `openssl rand -base64 60`" Type="Variable" Display="always-hide" Required="true" Mask="true"/>
    <Config Name="Email From Address" Target="EMAIL_FROM_ADDRESS" Default="" Description="Email address to use as the sender for password reset emails." Type="Variable" Display="always-hide" Required="false" Mask="false"/>
    <Config Name="Email Transport" Target="EMAIL_TRANSPORT" Default="gmail|mailgun" Description="Email transport method to use for sending emails." Type="Variable" Display="always-hide" Required="false" Mask="false"/>
    <Config Name="Mailgun API Key" Target="EMAIL_API_KEY" Default="" Description="API key for Mailgun email transport." Type="Variable" Display="always-hide" Required="false" Mask="true"/>
