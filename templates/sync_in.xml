<?xml version="1.0"?>
<Container version="2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/template_schema.xsd template_schema.xsd">
    <Name>Sync-in</Name>
    <Repository>syncin/server:1</Repository>
    <Registry>https://hub.docker.com/r/syncin/server</Registry>
    <Branch>
        <Tag>1</Tag>
        <TagDescription>Latest stable release</TagDescription>
    </Branch>
    <Network>bridge</Network>
    <WebUI>http://[IP]:[PORT:8080]/</WebUI>
    <Privileged>false</Privileged>
    <Support>https://sync-in.com/docs</Support>
    <Project>https://sync-in.com</Project>
    <Overview>
        An open-source platform to store, share, collaborate, and sync your files.
    </Overview>
    <Beta>False</Beta>
    <Category>Productivity: Tools: Other: Status:Stable</Category>
    <ExtraSearchTerms>file sync share collaboration open-source self-hosted nextcloud</ExtraSearchTerms>
    <Icon>https://raw.githubusercontent.com/nwithan8/unraid_templates/master/images/sync-in-icon.png</Icon>
    <TemplateURL>https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/sync_in.xml</TemplateURL>
    <Maintainer>
        <WebPage>https://github.com/nwithan8</WebPage>
    </Maintainer>
    <Changes>
        ### 2025-12-18

        Initial release
    </Changes>
    <Requires>
        Requires a `environment.yaml` file to be mounted at the Config File path before starting the container. See configuration details: https://sync-in.com/docs/setup-guide/docker#1-default-secrets &#xD;
        &#xD;
        Requires a separate MariaDB database.
    </Requires>
    <Config Name="Web UI Port" Target="8080" Default="8080" Mode="tcp" Description="Container Port: 8080" Type="Port" Display="always-hide" Required="true" Mask="false">8080</Config>
    <Config Name="Config File" Target="/app/environment/environment.yaml" Default="/mnt/user/appdata/sync_in/environment.yaml" Description="Path to the environment file" Type="Path" Display="always-hide" Required="true" Mask="false">/mnt/user/appdata/sync_in/environment.yaml</Config>
    <Config Name="Initialize Admin" Target="INIT_ADMIN" Default="true|false" Description="Initialize the admin user on first run" Type="Variable" Display="always-hide" Required="true" Mask="false"/>
    <Config Name="Data Path" Target="/app/data" Default="/mnt/user/appdata/sync_in/data" Description="Path to data folder" Type="Path" Display="advanced-hide" Required="true" Mask="false">/mnt/user/appdata/dynamix/data</Config>
    <Config Name="Desktop Releases Path" Target="/app/static/releases" Default="/mnt/user/appdata/sync_in/releases" Description="Path to desktop releases" Type="Path" Mode="ro" Display="advanced-hide" Required="false" Mask="false">/mnt/user/appdata/sync_in/releases</Config>
    <Config Name="PUID" Target="PUID" Default="099" Description="" Type="Variable" Display="advanced" Required="true" Mask="false">099</Config>
    <Config Name="PGID" Target="PGID" Default="100" Description="" Type="Variable" Display="advanced" Required="true" Mask="false">100</Config>
</Container>
