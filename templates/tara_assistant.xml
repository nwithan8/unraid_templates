<?xml version="1.0"?>
<Container version="2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/template_schema.xsd template_schema.xsd">
    <Name>Tara Assistant</Name>
    <Repository>ghcr.io/tarahome/taraassistant:latest</Repository>
    <Registry>ghcr.io/tarahome/taraassistant</Registry>
    <Branch>
        <Tag>latest</Tag>
        <TagDescription>Latest stable release</TagDescription>
    </Branch>
    <Network>bridge</Network>
    <WebUI>http://[IP]:[PORT:8000]/</WebUI>
    <Privileged>false</Privileged>
    <Support>https://github.com/TaraHome/taraassistant-public/issues</Support>
    <Project>https://github.com/TaraHome/taraassistant-public</Project>
    <Overview>
        A system that watches how you live, finds the patterns you forgot to articulate, and turns those into Home Assistant automations you can actually inspect, edit, and own.
    </Overview>
    <Beta>False</Beta>
    <Category>AI: HomeAutomation: Productivity: Tools: Other: Status:Stable</Category>
    <ExtraSearchTerms>ai home automation assistant llm homeassistant tara taraassistant chatgpt ollama scripts automations data</ExtraSearchTerms>
    <Icon>https://raw.githubusercontent.com/nwithan8/unraid_templates/master/images/tara-assistant-icon.png</Icon>
    <TemplateURL>https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/tara_assistant.xml</TemplateURL>
    <Maintainer>
        <WebPage>https://github.com/nwithan8</WebPage>
    </Maintainer>
    <Changes>
        ### 2026-01-11

        Initial release
    </Changes>
    <Requires>
        Requires a separate Home Assistant instance and an LLM connection.
    </Requires>
    <Config Name="Web UI Port" Target="8000" Default="8000" Mode="tcp" Description="Container Port: 8000" Type="Port" Display="always-hide" Required="true" Mask="false">8000</Config>
    <Config Name="App Data" Target="/app/data" Default="/mnt/user/appdata/tara_assistant/data" Description="Path to the app data folder" Type="Path" Display="always-hide" Required="true" Mask="false">/mnt/user/appdata/tara_assistant/data</Config>
</Container>
