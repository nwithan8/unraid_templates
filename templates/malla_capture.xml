        <WebPage>https://github.com/nwithan8</WebPage>
    </Maintainer>
    <Changes>
        ### 2026-01-15

        Initial release
    </Changes>
    <Requires>
        Requires separate Malla - Web and MQTT instances. &#xD;
        &#xD;
        Requires a `config.yaml` file to be mounted at `/app/config.yaml` before starting the container. See configuration details: https://github.com/zenitraM/malla/blob/main/config.sample.yaml
    </Requires>
    <PostArgs>/app/.venv/bin/malla-capture</PostArgs>
    <Config Name="MQTT - Address" Target="MALLA_MQTT_BROKER_ADDRESS" Default="" Description="MQTT broker address (IP or hostname) where Meshtastic devices publish data." Type="Variable" Display="always-hide" Required="true" Mask="false"/>
    <Config Name="MQTT - Port" Target="MALLA_MQTT_PORT" Default="1883" Description="MQTT broker port." Type="Variable" Display="always-hide" Required="true" Mask="false">1883</Config>
    <Config Name="MQTT - Username" Target="MALLA_MQTT_USERNAME" Default="" Description="MQTT broker username (if required)." Type="Variable" Display="always" Required="false" Mask="false"/>
    <Config Name="MQTT - Password" Target="MALLA_MQTT_PASSWORD" Default="" Description="MQTT broker password (if required)." Type="Variable" Display="always" Required="false" Mask="true"/>
    <Config Name="MQTT - Topic Prefix" Target="MALLA_MQTT_TOPIC_PREFIX" Default="msh" Description="MQTT topic prefix used by Meshtastic devices." Type="Variable" Display="always" Required="false" Mask="false">msh</Config>
    <Config Name="MQTT - Topic Suffix" Target="MALLA_MQTT_TOPIC_SUFFIX" Default="/+/+/+/#" Description="MQTT topic suffix used by Meshtastic devices." Type="Variable" Display="always" Required="false" Mask="false">/+/+/+/#</Config>
    <Config Name="MQTT - Default Channel Key" Target="MALLA_DEFAULT_CHANNEL_KEY" Default="" Description="Default channel key for decrypting Meshtastic messages (if used)." Type="Variable" Display="always" Required="false" Mask="true"/>
    <Config Name="Data Path" Target="/app/data" Default="/mnt/user/appdata/malla/data" Description="Path to store Malla data." Type="Path" Display="advanced-hide" Required="true" Mask="false">/mnt/user/appdata/malla/data</Config>
    <Config Name="Internal Database Path" Target="MALLA_DATABASE_FILE" Default="/app/data/meshtastic_history.db" Description="Path to the internal database file inside the container. Not recommended to change." Type="Variable" Display="advanced-hide" Required="true" Mask="false">/app/data/meshtastic_history.db</Config>
</Container>
