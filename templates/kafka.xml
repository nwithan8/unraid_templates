<?xml version="1.0"?>
<Container version="2">
    <Name>Apache Kafka</Name>
    <Repository>bitnami/kafka:latest</Repository>
    <Registry>https://hub.docker.com/bitnami/kafka</Registry>
    <Branch>
        <Tag>latest</Tag>
        <TagDescription>Latest stable release</TagDescription>
    </Branch>
    <Network>bridge</Network>
    <Privileged>false</Privileged>
    <Support>https://kafka.apache.org/</Support>
    <Project>https://kafka.apache.org/</Project>
    <Overview>
        Apache Kafka is a distributed streaming platform designed to build real-time pipelines and can be used as a message broker or as a replacement for a log aggregation solution for big data applications.
    </Overview>
    <Beta>False</Beta>
    <Category>Productivity: Tools: Other: Status:Stable</Category>
    <ExtraSearchTerms>apache kafka distributed streaming platform message broker</ExtraSearchTerms>
    <Icon-black>https://raw.githubusercontent.com/nwithan8/unraid_templates/master/images/kafka-icon-light.png</Icon-black>
    <Icon-white>https://raw.githubusercontent.com/nwithan8/unraid_templates/master/images/kafka-icon-dark.png</Icon-white>
    <Icon-grey>https://raw.githubusercontent.com/nwithan8/unraid_templates/master/images/kafka-icon-light.png</Icon-grey>
    <Icon-azure>https://raw.githubusercontent.com/nwithan8/unraid_templates/master/images/kafka-icon-dark.png</Icon-azure>
    <TemplateURL>https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/kafka.xml</TemplateURL>
    <Maintainer>
        <WebPage>https://github.com/nwithan8</WebPage>
    </Maintainer>
    <Changes>
        ### 2025-04-21

        Initial release
    </Changes>
    <Config Name="Data Path" Target="/bitnami/kafka" Default="/mnt/user/appdata/kafka/data" Mode="rw" Description="Path to data files" Type="Path" Display="always-hide" Required="true" Mask="false">/mnt/user/appdata/kafka/data</Config>
</Container>
