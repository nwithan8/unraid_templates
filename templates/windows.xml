<?xml version="1.0"?>
<Container version="2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/template_schema.xsd template_schema.xsd">
    <Name>Windows</Name>
    <Repository>dockurr/windows:latest</Repository>
    <Registry>https://hub.docker.com/r/dockurr/windows</Registry>
    <Branch>
        <Tag>latest</Tag>
        <TagDescription>Latest stable release</TagDescription>
    </Branch>
    <Network>bridge</Network>
    <WebUI>http://[IP]:[PORT:8006]/</WebUI>
    <Privileged>false</Privileged>
    <Support>https://github.com/dockur/windows/issues</Support>
    <Project>https://github.com/dockur/windows</Project>
    <Overview>
        Windows inside a Docker container.
    </Overview>
    <Beta>False</Beta>
    <Category>Productivity: Tools: Other: Status:Stable</Category>
    <ExtraSearchTerms>windows microsoft pc computer vm virtual machine</ExtraSearchTerms>
    <Icon>https://raw.githubusercontent.com/dockur/windows/master/.github/logo.png</Icon>
    <TemplateURL>https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/windows.xml</TemplateURL>
    <Maintainer>
        <WebPage>https://github.com/nwithan8</WebPage>
    </Maintainer>
    <Changes>
        ### 2026-02-28

        Initial release
    </Changes>
    <Requires>
        See documentation for setup instructions: https://github.com/dockur/windows#faq-
    </Requires>
    <ExtraParams>--cap-add=NET_ADMIN</ExtraParams>
    <Config Name="Web UI Port" Target="8006" Default="8006" Mode="tcp" Description="Container Port: 8006" Type="Port" Display="always-hide" Required="true" Mask="false">8006</Config>
    <Config Name="Server Port - TCP" Target="3389" Default="3389" Mode="tcp" Description="Container Port: 3389" Type="Port" Display="always-hide" Required="true" Mask="false">3389</Config>
    <Config Name="Server Port - UDP" Target="3389" Default="3389" Mode="udp" Description="Container Port: 3389" Type="Port" Display="always-hide" Required="true" Mask="false">3389</Config>
    <Config Name="Windows Version" Target="VERSION" Default="11|11l|11e|10|10l|10e|8e|7u|vu|xp|2k|2025|2022|2019|2016|2012|2008|2003" Description="Windows version to run. Note that not all versions may work on all hardware." Type="Variable" Display="always-hide" Required="true" Mask="false"/>
    <Config Name="Storage" Target="/storage" Default="" Description="Path to storage directory. This may be large." Type="Path" Display="always-hide" Required="true" Mask="false"/>
    <Config Name="Shared Folder" Target="/shared" Default="" Description="Path to shared folder between host and container." Type="Path" Display="always" Required="false" Mask="false"/>
    <Config Name="Disk Size" Target="DISK_SIZE" Default="64G" Description="Size of the virtual disk." Type="Variable" Display="always-hide" Required="true" Mask="false">64G</Config>
    <Config Name="RAM Size" Target="RAM_SIZE" Default="4G" Description="Amount of RAM to allocate to the VM." Type="Variable" Display="always-hide" Required="true" Mask="false">4G</Config>
    <Config Name="CPU Cores" Target="CPU_CORES" Default="2" Description="Number of CPU cores to allocate to the VM." Type="Variable" Display="always-hide" Required="true" Mask="false">2</Config>
    <Config Name="KVM Device" Target="/dev/kvm" Default="/dev/kvm" Description="Path to KVM device." Type="Path" Display="always-hide" Required="true" Mask="false">/dev/kvm</Config>
    <Config Name="Network Tunnel Device" Target="/dev/net/tun" Default="/dev/net/tun" Description="Path to network tunnel device." Type="Path" Display="always-hide" Required="true" Mask="false">/dev/net/tun</Config>
</Container>
