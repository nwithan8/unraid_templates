<?xml version="1.0"?>
<Container version="2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/template_schema.xsd template_schema.xsd">
    <Name>qbitwebui</Name>
    <Repository>ghcr.io/maciejonos/qbitwebui:latest</Repository>
    <Registry>ghcr.io/maciejonos/qbitwebui</Registry>
    <Branch>
        <Tag>latest</Tag>
        <TagDescription>Latest stable release</TagDescription>
    </Branch>
    <Network>bridge</Network>
    <WebUI>http://[IP]:[PORT:80]/</WebUI>
    <Privileged>false</Privileged>
    <Support>https://github.com/Maciejonos/qbitwebui/issues</Support>
    <Project>https://github.com/Maciejonos/qbitwebui</Project>
    <Overview>
        A modern lightweight web interface for qBittorrent.
    </Overview>
    <Beta>False</Beta>
    <Category>Downloaders: Productivity: Tools: Other: Status:Stable</Category>
    <ExtraSearchTerms>qbittorrent webui qbit torrent client</ExtraSearchTerms>
    <Icon>https://raw.githubusercontent.com/nwithan8/unraid_templates/master/images/qbitwebui-icon.png</Icon>
    <TemplateURL>https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/qbitwebui.xml</TemplateURL>
    <Maintainer>
        <WebPage>https://github.com/nwithan8</WebPage>
    </Maintainer>
    <Changes>
        ### 2026-01-02

        Initial release
    </Changes>
    <Requires>
        Requires a separate qBittorrent instance.
    </Requires>
    <Config Name="Web UI Port" Target="80" Default="8081" Mode="tcp" Description="Container Port: 80" Type="Port" Display="always-hide" Required="true" Mask="false">8081</Config>
    <Config Name="qBittorrent URL" Target="QBITTORRENT_URL" Default="http://IP_ADDRESS:8080" Description="The URL of the qBittorrent instance (e.g., http://IP_ADDRESS:8080)" Type="Variable" Display="always-hide" Required="true" Mask="false">http://IP_ADDRESS:8080</Config>
</Container>
