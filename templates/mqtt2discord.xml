<?xml version="1.0"?>
<Container version="2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/template_schema.xsd template_schema.xsd">
    <Name>MQTT2Discord</Name>
    <Repository>aukevanderheide/mqtt2discord:latest</Repository>
    <Registry>https://hub.docker.com/r/aukevanderheide/mqtt2discord</Registry>
    <Branch>
        <Tag>latest</Tag>
        <TagDescription>Latest stable release</TagDescription>
    </Branch>
    <Network>bridge</Network>
    <Privileged>false</Privileged>
    <Support>https://gitlab.com/opensource-auke/mqtt2discord</Support>
    <Project>https://gitlab.com/opensource-auke/mqtt2discord</Project>
    <Overview>
        Send MQTT messages from a broker to Discord via webhooks.
    </Overview>
    <Beta>False</Beta>
    <Category>Productivity: Tools: Other: Status:Stable</Category>
    <ExtraSearchTerms>mqtt discord bot automation bridge gateway integration webhooks broker</ExtraSearchTerms>
    <Icon>https://raw.githubusercontent.com/nwithan8/unraid_templates/master/images/mqtt2discord-icon.png</Icon>
    <TemplateURL>https://raw.githubusercontent.com/nwithan8/unraid_templates/main/templates/mqtt2discord.xml</TemplateURL>
    <Maintainer>
        <WebPage>https://github.com/nwithan8</WebPage>
    </Maintainer>
    <Changes>
        ### 2026-02-23

        Initial release
    </Changes>
    <Requires>
        Requires a `config.json` file to be at the Config File path before starting the container. See documentation: https://gitlab.com/opensource-auke/mqtt2discord/-/blob/develop/src/config.json.sample
    </Requires>
    <Config Name="Config File" Target="/usr/src/bot/config.json" Default="/mnt/user/appdata/mqtt2discord/config.json" Description="Path to the config file" Type="Path" Display="always-hide" Required="true" Mask="false">/mnt/user/appdata/mqtt2discord/config.json</Config>
</Container>
