    <Branch>
        <Tag>latest</Tag>
        <TagDescription>Latest stable release</TagDescription>
    </Branch>
    <Network>bridge</Network>
    <WebUI>http://[IP]:[PORT:8888]/</WebUI>
    <Shell>sh</Shell>
    <Privileged>false</Privileged>
    <Support>https://github.com/TaterTotterson/microWakeWord-Trainer-Nvidia-Docker/issues</Support>
    <Project>https://github.com/TaterTotterson/microWakeWord-Trainer-Nvidia-Docker</Project>
